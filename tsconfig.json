{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "types": ["node", "jest"],
      "typeRoots": ["./node_modules/@types", "./src/@types"]

    },
    "include": ["src/**/*.ts",  "src/types/express/index.d.ts"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
  }
  